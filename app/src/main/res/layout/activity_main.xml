<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_drawable"
    android:padding="3dp"
    tools:context=".MainActivity">

    <!-- Instruction Text Boxes -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/globalInstructionsLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Global Instructions (e.g., Act as a senior developer)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_folder_open"
        app:endIconContentDescription="Open file">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/globalInstructionsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="4dp"
            android:textSize="12sp"
            android:lines="3" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/additionalInstructionsLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:hint="Additional Instructions (e.g., Keep it short)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/globalInstructionsLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/additionalInstructionsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="4dp"
            android:textSize="12sp"
            android:lines="3" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Response Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/response_border"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/micButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additionalInstructionsLayout">
        <TextView
            android:id="@+id/responseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aptos_font_family"
            android:text="Press the mic to start."
            android:textSize="10sp"
            android:textColor="@android:color/black"
            tools:ignore="MissingPrefix" />
    </ScrollView>

    <!-- Lottie Animation for listening feedback -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/listeningAnimation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/listening_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

    <!-- Control Buttons -->
    <ImageButton
        android:id="@+id/micButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Start Listening"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_btn_speak_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDecreaseFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_zoom_out"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/micButton"
        app:layout_constraintEnd_toStartOf="@+id/micButton"
        app:layout_constraintTop_toTopOf="@+id/micButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabIncreaseFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_zoom_in"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/micButton"
        app:layout_constraintStart_toEndOf="@+id/micButton"
        app:layout_constraintTop_toTopOf="@+id/micButton" />

</androidx.constraintlayout.widget.ConstraintLayout>