<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeminiVoiceAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- This line applies our custom, shorter Action Bar style -->
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>

        <item name="android:windowBackground">@color/app_background_color</item>
    </style>

    <!-- This is the new custom style for the Action Bar -->
    <style name="CustomActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <!-- Set the height to a smaller value. Default is 56dp. -->
        <item name="height">32dp</item>
    </style>
</resources>